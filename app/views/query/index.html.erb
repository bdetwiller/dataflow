<%= javascript_include_tag "table" %> 
      <script>
        var data = <%= @data.to_json.html_safe %>;
        var schema = <%= @schema.to_json.html_safe %>; 
      </script>

<div id="sidebar" class="ui left sidebar vertical thin accordion floating">
  <h2 class="ui header">Select Data<h2>
  <div class="ui fluid vertical menu"> <!-- need to add accordian -->
    <% @schema.each do |title, table| %>
      <div class="header item">
        <i class="table icon"></i>
        <%= title.capitalize %>
      </div>
    <div class="table <%= title %> menu"> 
    <% i = 0 %>
    <% while i  < table.length %>
      <a class="teal item"><%= table[i][0]%></a>
      <% i += 1 %>
    <% end %>
    </div>
    <% end %>
  </div>
  <a class="ui black button">Update Table</a>
</div>

<div class="segment">
  <h1 class="ui header">Query Data</h1>
  <div class="ui right floated black launch button">
