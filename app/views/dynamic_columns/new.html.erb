<div id="form1">
  <%= form_for [@database, @dynamic_column], class: "form-horizontal", "role" => "form" do |f| %>
  <div class="ui teal form segment">
    <h2 class="ui header">
       <i class="icon bolt"></i>
      Create Dynamic Column
    </h2>
    <div class="form-group" id="table-selector">
      <label for="database_name" class="col-sm-1 control-label">Table</label>

      <div class="table-dropdown">
        <%= f.collection_select :table, @schema.keys, :to_s, :to_s %>
      </div>
    </div>
    <div class="form-group">
      <label for="database_adapter" class="col-sm-1 control-label">Name</label>
      <div class="field">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group">
      <label for="database_encoding" class="col-sm-1 control-label">Code</label>
      <i class = "code icon"></i>
      <div class="field">
        <%= f.text_area :code %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1">

        <%= f.submit "Create Dynamic Column", class: "ui black submit button" %>
      </div>
    </div>
  </div>
  <% end %>
</div>